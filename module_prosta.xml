<?xml version="1.0" encoding="UTF-8"?>
<project name="module_prosta" default="compile.module.prosta">
  <dirname property="module.prosta.basedir" file="${ant.file.module_prosta}"/>
  
  <property name="module.jdk.home.prosta" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.prosta" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.prosta" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.prosta" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="prosta.output.dir" value="${module.prosta.basedir}/out/production/Prosta"/>
  <property name="prosta.testoutput.dir" value="${module.prosta.basedir}/out/test/Prosta"/>
  
  <path id="prosta.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="prosta.module.production.classpath">
    <path refid="${module.jdk.classpath.prosta}"/>
  </path>
  
  <path id="prosta.runtime.production.module.classpath">
    <pathelement location="${prosta.output.dir}"/>
  </path>
  
  <path id="prosta.module.classpath">
    <path refid="${module.jdk.classpath.prosta}"/>
    <pathelement location="${prosta.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
  </path>
  
  <path id="prosta.runtime.module.classpath">
    <pathelement location="${prosta.testoutput.dir}"/>
    <pathelement location="${prosta.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.prosta">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.prosta">
    <patternset refid="excluded.from.module.prosta"/>
  </patternset>
  
  <path id="prosta.module.sourcepath">
    <dirset dir="${module.prosta.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="prosta.module.test.sourcepath">
    <dirset dir="${module.prosta.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.prosta" depends="compile.module.prosta.production,compile.module.prosta.tests" description="Compile module Prosta"/>
  
  <target name="compile.module.prosta.production" depends="register.custom.compilers" description="Compile module Prosta; production classes">
    <mkdir dir="${prosta.output.dir}"/>
    <javac2 destdir="${prosta.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.prosta}/javac">
      <compilerarg line="${compiler.args.prosta}"/>
      <bootclasspath refid="prosta.module.bootclasspath"/>
      <classpath refid="prosta.module.production.classpath"/>
      <src refid="prosta.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.prosta"/>
    </javac2>
    
    <copy todir="${prosta.output.dir}">
      <fileset dir="${module.prosta.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.prosta.tests" depends="register.custom.compilers,compile.module.prosta.production" description="compile module Prosta; test classes" unless="skip.tests">
    <mkdir dir="${prosta.testoutput.dir}"/>
    <javac2 destdir="${prosta.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.prosta}/javac">
      <compilerarg line="${compiler.args.prosta}"/>
      <bootclasspath refid="prosta.module.bootclasspath"/>
      <classpath refid="prosta.module.classpath"/>
      <src refid="prosta.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.prosta"/>
    </javac2>
    
    <copy todir="${prosta.testoutput.dir}">
      <fileset dir="${module.prosta.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.prosta" description="cleanup module">
    <delete dir="${prosta.output.dir}"/>
    <delete dir="${prosta.testoutput.dir}"/>
  </target>
</project>